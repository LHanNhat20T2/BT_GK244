<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="16dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="307dp"
                android:src="@drawable/img_header"
                android:maxWidth="100px" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#FFFAF0">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt1"
            android:textSize="28sp"
            android:textColor="#8B4789"
            android:gravity="center"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt2"
            android:textSize="28sp"
            android:textColor="#8B4789"
            android:gravity="center"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8B4513"
        android:orientation="vertical"
        android:weightSum="2">

        <!--         items - 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <!--item 1 - sub 1-->

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/layerboder4main"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="200dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="200px"
                        android:layout_height="68dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_profile"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/txtprofile"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#FFFAFA"
                    android:textSize="28sp" />
            </LinearLayout>

            <!--item 1 - sub 2-->

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/layerboder4main"
                android:backgroundTint="@null"
                android:backgroundTintMode="@null"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="200dp"
                    android:layout_marginTop="20dp">
                <ImageView
                        android:layout_width="200px"
                        android:layout_height="68dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_football" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/txtnews"
                    android:textColor="#FFFAFA"
                    android:textSize="28sp" />
            </LinearLayout>
        </LinearLayout>
        <!--         items - 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <!--item 2 - sub 1-->

            <LinearLayout
                android:layout_margin="5dp"
                android:background="@drawable/layerboder4main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="200dp"
                    android:layout_marginTop="20dp">

                <ImageView
                        android:layout_width="200px"
                        android:layout_height="68dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_logoute" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/txtshool"
                    android:textColor="#FFFAFA"
                    android:textSize="28sp" />
            </LinearLayout>

            <!--item 2 - sub 2-->
            <LinearLayout
                android:layout_margin="5dp"
                android:background="@drawable/layerboder4main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="200dp"
                    android:layout_marginTop="20dp"
                    >

                    <ImageView
                        android:layout_width="200px"
                        android:layout_height="68dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/exit"
                        />
/
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/txtexit"
                    android:textColor="#FFFAFA"
                    android:textSize="28sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>