<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_BaiRang">

    <!--    header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:textColor="#008B45"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/txtnumberfour"
            android:textSize="35sp"
            />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="@string/txtnameBR"
            android:textSize="28sp"
            />
    </LinearLayout>

    <!--   Thông tin biển Bãi Rạng-->
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="Montserrat"
                android:text="@string/txtQualityevalution"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv1"
                android:fontFamily="sans-serif"
                android:text="@string/txtcontextQualityevalutionBR"
                android:textSize="20sp"
                android:textColor="#0064c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv1"
                android:fontFamily="sans-serif"
                android:text="@string/txtgoogle"
                android:textSize="20sp"
                android:textColor="#1C1C1C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="Montserrat"
                android:text="@string/txtadress"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv1"
                android:fontFamily="sans-serif"
                android:text="@string/txtcontextaddressBR"
                android:textColor="#0064c2"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="Montserrat"
                android:text="@string/txtAdvantages"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv1"
                android:fontFamily="sans-serif"
                android:text="@string/txtcontextAdvantagesBR"
                android:textSize="20sp"
                android:textColor="#1C1C1C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="Montserrat"
                android:text="@string/txtdefect"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv1"
                android:fontFamily="sans-serif"
                android:text="@string/txtcontextdefectBR"
                android:textSize="20sp"
                android:textColor="#1C1C1C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <!--img biển Bãi Rạng -->
        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/img_bienhamy"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="18sp"
            android:text="@string/figureBR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!--        mô tả biển Bãi Rạng  -->
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtmotaBR"/>
    </LinearLayout>

</RelativeLayout>